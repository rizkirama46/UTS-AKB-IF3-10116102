<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <LinearLayout
                android:id="@+id/layout_nim"
                android:paddingTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:background="@color/grey">

                <TextView
                    android:textColor="#262626"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="NIM : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/nim"
                    android:textColor="#262626"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="isi_nim"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_nama"
                android:paddingTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_nim">

                <TextView
                    android:textColor="#262626"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="Nama : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/nama"
                    android:textColor="#262626"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="isi_nama"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_kelas"
                android:paddingTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:background="@color/grey"
                android:layout_below="@+id/layout_nama">

                <TextView
                    android:textColor="#262626"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="Kelas : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/kelas"
                    android:textColor="#262626"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="isi_kelas"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_telp"
                android:paddingTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_kelas">

                <TextView
                    android:textColor="#262626"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="Telepon : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/telp"
                    android:textColor="#262626"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="isi_telepon"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_email"
                android:paddingTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:background="@color/grey"
                android:layout_below="@+id/layout_telp">

                <TextView
                    android:textColor="#262626"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="E-Mail : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/email"
                    android:textColor="#262626"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="isi_email"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ig"
                android:paddingTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_email">

                <TextView
                    android:textColor="#262626"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="Instagram : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ig"
                    android:textColor="#262626"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="isi_instagram"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/grey"
                android:layout_below="@+id/layout_ig">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>